---
import { Container } from '@littlesticks/odyssey-theme-components';
---

<Container>
	<section class="hero-section__section">
		<div class="hero-section__text">
			<slot name="text-container">
			</slot>
		</div>
	</section>
</Container>

<style>
	.hero-section__section {
		margin: var(--section-margin) auto;
		min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
		display: grid;
		place-items: center;
	}
	.hero-section__text :global(img) {
		width: 100%;
		height: 100%;
		max-height: 80vh;
		object-fit: cover;
		border-radius: var(--theme-shape-radius);
	}
</style>